<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="@dimen/Dp_46"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/flash_icon"
            android:paddingTop="@dimen/Dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flash_auto" />

        <TextView
            android:id="@+id/tv_flash_off"
            style="@style/Flash_Text_Style"
            android:text="@string/flash_off"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_flash_auto"
            style="@style/Flash_Text_Style"
            android:text="@string/flash_auto"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_flash_on"
            style="@style/Flash_Text_Style"
            android:text="@string/flash_on"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_flash_always_on"
            style="@style/Flash_Text_Style"
            android:text="@string/flash_always_on"
            android:visibility="gone" />
    </LinearLayout>
</layout>